extends layout

block content
  form(method='POST')
    legend Login
    .form-group
      label(for='email') Email
      input.form-control(type='text', name='email')
    .form-group
      label(for='password') Password
      input.form-control(type='password', name='password')
    button.btn.btn-primary(type='submit') Login
    a.btn.btn-link(href='/api/auth/recover') Forgot Password?
    a.btn.btn-link(href='/api/auth/resend') Resend Verification link